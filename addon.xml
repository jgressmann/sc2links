<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.sc2links" name="sc2links.com" version="0.1.0" provider-name="jgressmann">
    <requires>
        <import addon="xbmc.python" version="2.14.0"/>
        <import addon="script.module.requests" version="2.12.4" />
        <import addon="script.module.beautifulsoup4" version="4.3.2" />
        <import addon="script.module.dateutil" version="2.5.3" />
    </requires>
    <extension point="xbmc.python.pluginsource" library="addon.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <platform>all</platform>
        <summary lang="en_US">Access to the StarCraft VODs linked on sc2links.com</summary>
        <description lang="en_US">Videos on demand (VODs) about Blizzard's StarCraft II (SC2) and StarCraft Broodwar (BW).[CR]Featured tournaments include ASL, GSL, SSL, and much, much more.[CR]GL HF!</description>
        <disclaimer lang="en_US">The plugin's icon and fanart are copyright (c) https://sc2links.com/[CR]Note that you will probably also have to install the YouTube plugin to watch the VODs.</disclaimer>
        <license>MIT</license>
        <language></language>
        <source>https://github.com/jgressmann/sc2links</source>
        <website>https://sc2links.com/</website>
        <assets>
            <icon>resources/icon.png</icon>
            <fanart>resources/fanart.jpeg</fanart>
            <screenshot>resources/media/kodi-sc2links-main.jpeg</screenshot>
            <screenshot>resources/media/kodi-sc2links-new.jpeg</screenshot>
        </assets>
        <news>Initial release</news>
    </extension>
</addon>
